{
  "name": "todo-tracker",
  "displayName": "todo-tracker",
  "description": "Aggressive TODO tracker with Git enforcement",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/*",
    "onCommand:todo-tracker.scanProject"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "todo-tracker.scanProject",
        "title": "Scan Project for TODOs",
        "category": "TODO Tracker"
      },
      {
        "command": "todo-tracker.showPanel",
        "title": "Show TODO Tracker Panel"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "todo-tracker.view",
          "name": "TODOs Tracker",
          "icon": "resources/todo-icon.svg"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.4",
    "@types/estree": "^1.0.8",
    "@types/istanbul-lib-coverage": "^2.0.6",
    "@types/jest": "^30.0.0",
    "@types/json-schema": "^7.0.15",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "husky": "^8.0.0",
    "jest": "^30.0.4",
    "jest-mock-extended": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "sinon": "^21.0.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  }
}
