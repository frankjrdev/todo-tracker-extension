{
  "name": "todo-tracker",
  "displayName": "todo-tracker",
  "description": "Aggressive TODO tracker with Git enforcement",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/*",
    "onCommand:todo-tracker.scanProject"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "todo-tracker.scanProject",
        "title": "Scan Project for TODOs",
        "category": "TODO Tracker"
      },
      {
        "command": "todo-tracker.showPanel",
        "title": "Show TODO Tracker Panel"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "todo-tracker.view",
          "name": "TODOs Tracker",
          "icon": "resources/todo-icon.svg"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && pnpm run format && node esbuild.js",
    "watch": "pnpm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "watch:jest": "jest --watch",
    "watch:lint": "eslint src --ext .ts,.tsx --fix --watch",
    "package": "pnpm run check-types && pnpm run lint && pnpm run format && node esbuild.js --production",
    "test": "jest --coverage --collectCoverageFrom='src/**/*.ts'",
    "test:unit": "jest --coverage --collectCoverageFrom='src/**/*.ts' --testPathPattern='unit'",
    "test:integration": "jest --coverage --collectCoverageFrom='src/**/*.ts' --testPathPattern='integration'",
    "test:e2e": "vscode-test --extensionDevelopmentPath=. --extensionTestsPath=./test/e2e",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand",
    "test:watch": "jest --watch --collectCoverageFrom='src/**/*.ts'",
    "lint": "eslint src --ext .ts,.tsx --fix --max-warnings=0",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"test/**/*.{ts,tsx}\"",
    "check-types": "tsc --noEmit",
    "validate": "pnpm run check-types && pnpm run lint && pnpm run format && pnpm run test",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "build": "pnpm run compile && pnpm run test",
    "dev": "pnpm-run-all --parallel watch:*"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.4",
    "@types/estree": "^1.0.8",
    "@types/istanbul-lib-coverage": "^2.0.6",
    "@types/jest": "^30.0.0",
    "@types/json-schema": "^7.0.15",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "husky": "^8.0.0",
    "jest": "^30.0.4",
    "jest-mock-extended": "^4.0.0",
    "lint-staged": "^16.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "sinon": "^21.0.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
